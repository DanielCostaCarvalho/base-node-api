  "bugs": {
    "url": "https://github.com/DanielCostaCarvalho/base-node-api/issues"
  },
  "homepage": "https://github.com/DanielCostaCarvalho/base-node-api#readme",
  "devDependencies": {
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "lint-staged": "^10.2.11",
    "standard": "^14.3.4"
  },
  "dependencies": {
    "bcrypt": "^5.0.0",
    "validator": "^13.1.1"
  }
}
